<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/card_menu_transaction_payment_iv_bg"
        android:layout_height="92dp"
        android:layout_width="match_parent"
        android:background="@drawable/card_background_orange"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/card_menu_transaction_payment_tv_menu"
        style="@style/TextContentTitle"
        android:layout_marginStart="@dimen/tiga_dua"
        android:layout_marginTop="@dimen/dua_empat"
        android:text="Es Teh"
        app:layout_constraintStart_toStartOf="@+id/card_menu_transaction_payment_iv_bg"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/card_menu_transaction_payment_tv_harga"
        style="@style/TextContentDescription"
        android:layout_marginStart="@dimen/tiga_dua"
        android:layout_marginBottom="@dimen/dua_empat"
        android:text="50.000"
        app:layout_constraintBottom_toBottomOf="@+id/card_menu_transaction_payment_iv_bg"
        app:layout_constraintStart_toStartOf="@+id/card_menu_transaction_payment_iv_bg" />


    <TextView
        android:id="@+id/card_menu_transaction_payment_tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/empat_puluh"
        android:fontFamily="@font/poppins_semibold"
        android:text="20"
        android:textColor="@color/white"
        android:textSize="@dimen/text_enam_belas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/card_menu_transaction_payment_iv_bg"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/card_menu_transaction_payment_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="-1dp"
        android:layout_marginStart="@dimen/enam_belas"
        android:layout_marginEnd="@dimen/enam_belas"
        android:src="@drawable/line_white"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/card_menu_transaction_payment_iv_bg"
        />


</androidx.constraintlayout.widget.ConstraintLayout>